<div class="menu">
  <div class="logo">
  <a href="/">
    <img src="/assets/logo.png" alt="">
  </a>
  </div>

  <div class='location'>
    <big><%= formatted_date_time(Time.now) %></big></br>

    <% if current_reader && current_reader.location %>
      <small><%= current_reader.location %></small>
    <% end %>
  </div>


  <div class='profile'>
    <% if current_reader %>
      <% if current_reader.image %>
        <img src="<%= current_reader.image %>" alt="profile-image" />
      <% end %>
      <% if current_reader.name %>
        <div class='greetings'>Hi, <%= current_reader.name %></div>
      <% else %>
        <div class='greetings'>Hi, <%= current_reader.email %></div>
      <% end %>

      <div class='actions'>
        <a href="/feed" class='feed'>
          Latest news <i class="fa fa-star"></i>
        </a> &nbsp;
        <a href="/articles" class='bookmarks'>
          Bookmarked <i class="fa fa-star"></i>
        </a>
      </div>
            
    <% else %>
      <div class='greetings'>Hi, Reader</div>
      <div class='about'>
        <a href="/about">How it works</a>
        <%= render 'welcome/how_it_works' %>
      </div>
    <% end %>
  </div>


  <div id='arrow'>
    Menu &nbsp; <i class="fa fa-chevron-down"></i>
  </div>

  <ul class="nav">
  <% if current_reader %>
    <li>
      <a data-section='rss' class='profile-link'>Customize feed</a>
    </li>
    <li>
      <a data-section='social' class='profile-link'>Connect social</a>
    </li>
    <li>
        <a href="/leafers">What friends are reading</a>
    </li>
    <li>
      <a href="/logout">Log out</a>
    </li>
    <li>
      <a href="/about">About Leafthru</a>
    </li>
   <% else %>
    <li>
      <a href="/">Sign Up/Log in</a>
    </li>
    <li>
      <a href="/about">About Leafthru</a>
    </li>
    <% end %>
  </ul>


</div>

<script type="text/javascript">
  window.navigation = new Navigation();
</script>
