<div class="menu">
  <div>Leafthru LOGO</div>
  <div>
    <%= formatted_date_time(Time.now) %></br>
    Temperature: 72 degrees
  </div>
  <div>
    Hi, <%= @greeting %></br>
    I'm Feeling...
  </div>  

  <div id='arrow'>
    <i class="fa fa-chevron-down"></i> <br/>
    Menu
  </div>

  <ul class="nav">
    <li>
        <a href="/articles">Read Later</a>
    </li>
    <%if current_reader %>
    <li>
      <a href="/profile">Edit My Profile</a>
    </li>  
    <li>
      <a href="/feed">View My News</a>
    </li>  
    <li>
      <a href="/logout">Log out</a>
    </li>
      <% end %>
  </ul>
  
</div>


<h3><span id='signup'>Sign up</span> or <span id='login'>Log in</span></h3>

<div class="form">
  <div class="signup">
  <%= form_for @reader do |f| %>
    <%= f.text_field :email, placeholder: 'Email' %>
    <%= f.password_field :password, placeholder: 'Password' %>
    <%= f.submit "Sign up" %>
  <% end %>
  </div>

  <div class="login">
  <%= form_tag '/sessions', method: :post do %>
    <%= text_field_tag :email, nil, placeholder: 'Email' %>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <%= submit_tag "Log in" %>
  <% end %>
  </div>

</div>
