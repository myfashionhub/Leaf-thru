<div class="wrapper">
<h2>My Bookmarks</h2>

<% if @articles.length > 0 %>

  <% @articles.reverse.each do |article| %>
    <div class="saved-article">
      <a href="<%= article.url %>" target="_blank" class="title">
        <%= (article.title || '').html_safe %>
      </a>
      <p class="extract">
        <%= article.extract.html_safe %>
      </p>

      
      <p class="source">
      <% if article.publication.nil? %>
          Shared by @<%= article.shared_by.html_safe %>
      <% else %>
        Published by <%= article.publication.html_safe %>
      <% end %>
      </p>

      <button class="delete" data="/articles/<%= article.id %>">
        <i class="fa fa-trash-o"></i> Delete bookmark
      </button>
    </div>
  <% end %>

<% else %>
  <p>You have no bookmark yet! <a href="/feed">Check out the feed</a>.</p>

<% end %>

</div>
