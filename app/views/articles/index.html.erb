<div class="wrapper">
<h2>My Bookmarks</h2>

<% @articles.each do |article| %>
  <div class="saved-article">
  <h3 class='title'>
    <a href="<%= article.url %>">
      <%= article.title %>
    </a> 

    <% if article.publication.nil? %>
      <span class='source'>
        Shared by <a target='_blank' href="http://twitter.com/<%= article.shared_by %>">
        @<%= article.shared_by %></a>
      </span>
    <% else %> 
      <span class='source'> 
        Published by <%= article.publication %>
      </span>  
    <% end %> 
  </h3>
  <p>  
    <%= article.extract %>
  </p>
  
  <form action="/articles/<%= article.id %>" method='post'>
    <%= token_tag %>
    <input type="hidden" name='_method' value='delete'>
    <button class='delete'><i class="fa fa-trash-o"></i> Delete bookmark</button>
  </form>
  </div>
<% end %>

</div>
