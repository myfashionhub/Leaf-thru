<div class="wrapper">

<% if @reader.name %>
  <h3>Customize your profile, <%= @reader.name %></h3>
<% else %>
  <h3>Customize your profile, <%= @reader.email %></h3>
<% end %>

<div class="social">
  <a href="/auth/facebook">Link your Facebook account</a>
  <a href="/auth/twitter">Link your Twitter account</a>
</div>

<div class="preference">
<h4>Choose your News Preferences</h4>
  <%= form_for @subscription do |f| %>
    <%= collection_check_boxes(:reader, :publication_ids, Publication.all, :id, :name, {}) %>
    <%= f.submit 'Update preference' %>
  <% end %>



<div class="profile">
  <h4>Edit profile</h4>
  <%= form_for @reader do |f| %>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
    <%= f.submit "Update profile" %>
  <% end %>
</div>


</div>
